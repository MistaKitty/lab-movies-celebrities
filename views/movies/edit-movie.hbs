<h2>Create a new movie</h2>
<form action="/movies/{{movie._id}}/edit" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" value="{{movie.title}}" required/>
    <label for="genre">Genre</label>
    <input type="text" name="genre" value="{{movie.genre}}" required/>
    <label for="plot">Plot</label>
    <input type="text" name="plot" value="{{movie.plot}}" required/>
    <label for="celebrities">Celebrities</label>
    <select name="cast" id="cast" multiple required>
        {{#each celebrities}}
            <option value="{{this._id}}" {{#ifIn this._id ../selectedMovieCelebritiesIds }}selected{{/ifIn}}>{{this.name}}</option>
        {{/each}}
    </select>
    <button type="submit">Edit</button>
</form>
